<div class="container">
  <div class="row">
    <div class="col-sm-10 offset-sm-1 mt-3">
      <% if signed_in? %>
        <div class="text-right">
          <%= link_to 'Create new Post', new_post_path,
         class: "btn btn-primary" %>
        </div>
      <% end %>
      <% @posts.each do |post| %>
        <h2 class="mt-3"><%= link_to markdown(post.title), post %></h2>
        <p class="publish_by">Published by <%= post.user.email %> <%= time_ago_in_words(post.created_at) %> ago</p>
        <!--<%= post.created_at.strftime("%B %d, %Y") %>-->
        <p><%= markdown(post.content.truncate(250)) %></p>
        <div class="mb-5">
          <% if signed_in? && current_user == post.user %>
            <%= link_to " edit" , edit_post_path(post), class: "far fa-edit"%>
            <%= link_to ' delete', post, method: :delete, data: {confirm: "Are you sure?"}, class: "pl-1 far fa-trash-alt" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
