<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h1><%= form_title %></h1>
      <% if @post.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_for @post do |f|%>
        <div class="form-group">
          <%= f.label :title, "Título" %>
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el título del post" %>
        </div>
        <div class="form-group">
          <%= f.label :content, "Contenido" %>
          <%= f.text_area :content, class: "form-control", 
          placeholder: "Escribe tus ideas...", rows: 10, data: {provide: "markdown"}%>
        </div>
        <div>
          <%= f.submit form_submit, class: "btn btn-primary btn-block btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
